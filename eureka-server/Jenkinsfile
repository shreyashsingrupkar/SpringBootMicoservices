pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "eureka-server:latest"
        CONTAINER_NAME = "eureka-server"
        APP_PORT = "8761"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/shreyashsingrupkar/SpringBootMicoservices.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('eureka-server') {
                    echo "Building Eureka Server with Maven..."
                    bat 'mvnw.cmd clean package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('eureka-server') {
                    echo "Building Docker Image..."
                    bat "docker build -t %DOCKER_IMAGE% ."
                }
            }
        }

        stage('Verify Docker Image') {
            steps {
                echo "Verifying Docker Image..."
                bat "docker images"
            }
        }

        stage('Deploy on Docker') {
            steps {
                script {
            echo "Deploying Eureka Server container..."
            powershell '''
                Write-Host "Stopping old container if running..."
                docker stop eureka-server 2>$null

                Write-Host "Removing old container if present..."
                docker rm eureka-server 2>$null

                Write-Host "Running new Eureka container..."
                docker run -d -p 8761:8761 --name eureka-server eureka-server:latest
            '''
        }
            }
        }
    }

    post {
        success {
            echo "Eureka Server built, Dockerized, and deployed successfully!"
        }
        failure {
            echo "Build failed! Check logs for details."
        }
    }
}
