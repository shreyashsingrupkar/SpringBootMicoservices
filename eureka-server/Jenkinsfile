pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "eureka-server:latest"
        CONTAINER_NAME = "eureka-server"
        APP_PORT = "8761"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/shreyashsingrupkar/SpringBootMicoservices.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('eureka-server') {
                    echo "üîß Building Eureka Server with Maven..."
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('eureka-server') {
                    script {
                        echo "üê≥ Building Docker Image..."
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    }
                }
            }
        }

        stage('Verify Docker Image') {
            steps {
                echo "üîç Verifying Docker Image..."
                sh "docker images | grep eureka-server"
            }
        }

        stage('Deploy on Docker') {
            steps {
                script {
                    echo "üöÄ Deploying Eureka Server container..."
                    // Stop & remove old container if running
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"

                    // Run new container
                    sh "docker run -d -p ${APP_PORT}:8761 --name ${CONTAINER_NAME} ${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Eureka Server built, Dockerized, and deployed successfully!"
        }
        failure {
            echo "‚ùå Build failed! Check logs for details."
        }
    }
}
