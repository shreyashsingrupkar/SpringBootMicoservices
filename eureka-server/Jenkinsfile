pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "eureka-server:latest"
        CONTAINER_NAME = "eureka-server"
        APP_PORT = "8761"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/shreyashsingrupkar/SpringBootMicoservices.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('eureka-server') {
                    echo "Building Eureka Server with Maven..."
                    bat 'mvnw.cmd clean package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('eureka-server') {
                    echo "Building Docker Image..."
                    bat "docker build -t %DOCKER_IMAGE% ."
                }
            }
        }

        stage('Verify Docker Image') {
            steps {
                echo "Verifying Docker Image..."
                bat "docker images"
            }
        }

        stage('Deploy on Docker') {
            steps {
                script {
                    echo "Deploying Eureka Server container..."

                    // Stop old container (ignore error if not running)
                    bat """
                    docker stop %CONTAINER_NAME% || echo Container not running
                    docker rm %CONTAINER_NAME% || echo No container to remove
                    """

                    // Run new container
                    bat "docker run -d -p %APP_PORT%:8761 --name %CONTAINER_NAME% %DOCKER_IMAGE%"
                }
            }
        }
    }

    post {
        success {
            echo "Eureka Server built, Dockerized, and deployed successfully!"
        }
        failure {
            echo "Build failed! Check logs for details."
        }
    }
}
